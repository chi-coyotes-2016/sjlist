<h1>Edit Post:</h1>

<%= render 'errors' %>

<%= form_for :post, url: post_path, method: :patch do |f| %>
  <p>
    <%= f.label :category_id %><br />
    <% if @category %>
      <%= f.collection_select(:category_id, Category.order(:name), :id, :name, {selected: @category.id}) %>
    <% else %>
      <%= f.collection_select(:category_id, Category.order(:name), :id, :name, {include_blank: true}) %>
    <% end %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Edit" %>
  </p>
<% end %>
<%= link_to 'Back', :post %>
